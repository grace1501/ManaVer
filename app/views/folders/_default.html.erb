<div id="default-version">

  <% if version.link.attached? %>
    <div>
      <%= link_to "View", rails_blob_url(version.link, disposition: "preview"), target: "_blank" %>
    </div>

    <div>
      <%= link_to "Download", rails_blob_url(version.link, disposition: "attachment") %>
    </div>   

    <div>
      <%= link_to "Share", rails_blob_url(version.link, host: request.base_url), target: "_blank" %>
    </div>

  <% else %>
    <p class="fw-semibold"><%= version.name %></p>
    <p class="fst-italic">No file attachment.</p>
  <% end %>

</div>
