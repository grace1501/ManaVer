<h1>New version</h1>

<%#= render "form", version: @version %>

<br>

<div>
  <%#= link_to "Back to versions", folder_path(folder.id) %>
</div>

<%= form_with url: versions_path, method: :post, scope: :version do |form| %>
  
  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :folder_id, style: "display: block" %>
    <%= form.text_field :folder_id, value: params[:folder_id] %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.file_field :link %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
